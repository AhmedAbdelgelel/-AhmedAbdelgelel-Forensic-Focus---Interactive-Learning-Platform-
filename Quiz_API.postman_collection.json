{
	"info": {
		"_postman_id": "quiz-api-collection",
		"name": "Quiz API Collection",
		"description": "Collection of all endpoints for the Quiz Application",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"url": "http://localhost:5000/api/auth/register",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						}
					}
				},
				{
					"name": "Login User",
					"request": {
						"method": "POST",
						"url": "http://localhost:5000/api/auth/login",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						}
					}
				}
			]
		},
		{
			"name": "Quiz Management",
			"item": [
				{
					"name": "Get All Quizzes",
					"request": {
						"method": "GET",
						"url": "http://localhost:5000/api/quiz",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						]
					}
				},
				{
					"name": "Create Quiz",
					"request": {
						"method": "POST",
						"url": "http://localhost:5000/api/quiz",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"quizId\": \"case-001\",\n    \"title\": \"The Desert Road Murders\",\n    \"description\": \"A challenging case involving multiple crime scenes\",\n    \"questions\": [\n        {\n            \"id\": \"mc1\",\n            \"text\": \"What was found at the first crime scene?\",\n            \"options\": {\n                \"a\": \"A knife\",\n                \"b\": \"Tire tracks\",\n                \"c\": \"Blood stains\",\n                \"d\": \"Footprints\"\n            },\n            \"correctAnswer\": \"b\"\n        }\n    ]\n}"
						}
					}
				}
			]
		},
		{
			"name": "Quiz Taking",
			"item": [
				{
					"name": "Start Quiz",
					"request": {
						"method": "POST",
						"url": "http://localhost:5000/api/quiz/{{quizId}}/start",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						]
					}
				},
				{
					"name": "Submit Answer",
					"request": {
						"method": "POST",
						"url": "http://localhost:5000/api/quiz/{{quizId}}/submit",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"questionId\": \"mc1\",\n    \"answer\": \"b\"\n}"
						}
					}
				},
				{
					"name": "Get Quiz History",
					"request": {
						"method": "GET",
						"url": "http://localhost:5000/api/quiz/history",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						]
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "jwt_token",
			"value": "YOUR_JWT_TOKEN_HERE"
		},
		{
			"key": "quizId",
			"value": "case-001"
		}
	]
}
